@model westcoast_cars.web.ViewModels.VehiclePostViewModel

<section class="page">
    <h1 class="page-title">LÃ¤gg till bil</h1>
    <div class="form-container">
        <form class="form" asp-action="create" method="post">
            <div class="form-control">
                <label asp-for="RegistrationNumber"></label>
                <input asp-for="RegistrationNumber" />
                <span class="error" asp-validation-for="RegistrationNumber"></span>
            </div>
            <div class="form-control">
                <label asp-for="Manufacturer"></label>
                <select asp-for="Manufacturer" asp-items="Model.Manufacturers"></select>
                <span class="error" asp-validation-for="Manufacturer"></span>
            </div>
            <div class="form-control">
                <label asp-for="Model"></label>
                <input asp-for="Model" />
                <span class="error" asp-validation-for="Model"></span>
            </div>
            <div class="form-control">
                <label asp-for="ModelYear"></label>
                <input asp-for="ModelYear" />
                <span class="error" asp-validation-for="ModelYear"></span>
            </div>
            <div class="form-control">
                <label asp-for="Mileage"></label>
                <input asp-for="Mileage" />
                <span class="error" asp-validation-for="Mileage"></span>
            </div>
            <div class="form-control">
                <label asp-for="Transmission"></label>
                <select asp-for="Transmission" asp-items="Model.Transmissions"></select>
                <span class="error" asp-validation-for="Transmission"></span>
            </div>
            <div class="form-control">
                <label asp-for="FuelType"></label>
                <select asp-for="FuelType" asp-items="Model.FuelTypes"></select>
                <span class="error" asp-validation-for="FuelType"></span>
            </div>
            <div class="form-control">
                <div class="buttons-container">
                    <button type="Submit" class="btn btn-dark"><i class="fa-sharp fa-solid fa-floppy-disk"></i>
                        Spara</button>
                    <a asp-action="index" asp-controller="VehiclesAdmin" class="btn btn-warning"><i
                            class="fa-solid fa-arrow-left"></i> Avbryt</a>
                </div>
            </div>
        </form>
    </div>
</section>
